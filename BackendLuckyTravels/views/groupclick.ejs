      <textarea id="Requirement" name="requirements" rows="5" cols="35" required></textarea>

      <br><br>
      <label>Arrival date:</label><br>
      <input type="date" class="day" name="arrival_date" min="2002-01-01" max="2035-01-01" required>

      <br><br>
      <label>Departure date:</label><br>
      <input type="date" class="day" name="departure_date" min="2002-01-01" max="2035-01-01" required>

      <br><br>
      <label>Total Number Of Members In Group:</label><br>
      <input type="number" class="day" name="group_members" placeholder="Enter number of members" required>

      <br><br>
      <label>Number of Children Upto age 3 (If Any):</label><br>
      <input type="number" class="day" name="children" placeholder="Enter number of children">

      <br><br>
      <label>Total Stay In Andaman (Days):</label><br>
      <input type="number" class="day" name="stay_days" min="0" max="10" placeholder="Enter days" required>

      <br><br>
      <label>Email Address:</label>
      <input type="email" class="detail" name="email" placeholder="example@gmail.com" required>

      <br><br>
      <label>Enter your phone number:</label><br>
