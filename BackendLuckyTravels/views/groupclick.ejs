  <!-- Form Section -->
  <div class="details">
    <form action="/" method="POST">
      <h1><u>Fill Up The Details Below</u></h1>
      <br>

      <input type="hidden" name="access_key" value="dab74890-1032-4d22-b419-16ac7a876b67">

      <label>Enter Your Full Name:</label>
      <input type="text" class="detail" name="name" placeholder="Enter Your Name" required>

